{
    "$id": "weapon-schema",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Weapon",
    "type": "object",
    "properties": {
        "data": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "damageMin": {
                        "type": "number"
                    },
                    "damageMax": {
                        "type": "number"
                    },
                    "attackSpeed": {
                        "type": "number"
                    },
                    "range": {
                        "type": "number"
                    },
                    "ammoType": {
                        "type": "string"
                    },
                    "fireRate": {
                        "type": "number"
                    },
                    "burst": {
                        "type": "number"
                    },
                    "reloadSpeed": {
                        "type": "number"
                    },
                    "modifier": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}
